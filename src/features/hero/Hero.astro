---
import Button from "../../shared/components/Button.astro";
import iceFrente from "../../assets/ice_frente.jpg";
---

<section
  class="relative min-h-screen flex items-center justify-center overflow-hidden"
>
  <!-- Background Image with Overlay -->
  <div
    class="absolute inset-0 bg-cover bg-center bg-no-repeat"
    style={`background-image: url(${iceFrente.src})`}
  >
    <div class="absolute inset-0 bg-black/70"></div>
  </div>

  <!-- Content -->
  <div class="container relative z-10 px-4 text-center" data-aos="fade-up">
    <div class="max-w-3xl mx-auto">
      <h1 class="text-4xl md:text-6xl font-serif font-bold text-white mb-6">
        Iglesia Cristiana Evangélica
      </h1>
      <p class="text-xl md:text-2xl text-white/90 mb-8">
        Una familia de fe en el corazón de General Pacheco
      </p>
      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <Button
          text="Conocenos"
          href="#nosotros"
          variant="primary"
          size="lg"
          class="bg-accent hover:bg-accent/90"
        />
        <Button
          text="Horarios"
          href="#horarios"
          variant="outline"
          size="lg"
          class="border-white text-white hover:bg-white/10"
        />
      </div>
    </div>
  </div>

  <!-- Scroll Down Indicator -->
  <div class="absolute bottom-8 left-0 right-0 flex justify-center">
    <a
      href="#nosotros"
      class="text-white flex flex-col items-center animate-bounce"
      aria-label="Scroll Down"
    >
      <span class="text-sm mb-2">Descubre más</span>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
        stroke-width="1.5"
        stroke="currentColor"
        class="w-6 h-6"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d="M19.5 13.5L12 21m0 0l-7.5-7.5M12 21V3"></path>
      </svg>
    </a>
  </div>
</section>

<script>
  // Header background change on scroll
  const header = document.querySelector("header");
  const changeHeaderBg = () => {
    if (window.scrollY > 50) {
      header?.classList.remove("bg-transparent");
      header?.classList.add(
        "bg-white/80",
        "backdrop-blur-lg",
        "border-b",
        "border-gray-200/20"
      );
    } else {
      header?.classList.add("bg-transparent");
      header?.classList.remove(
        "bg-white/80",
        "backdrop-blur-lg",
        "border-b",
        "border-gray-200/20"
      );
    }
  };

  window.addEventListener("scroll", changeHeaderBg);
  changeHeaderBg(); // Initial check
</script>